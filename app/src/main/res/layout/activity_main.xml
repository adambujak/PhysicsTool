<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.limbwal.adam.physicstool.MainActivity">

    <Button
        android:id="@+id/equation"
        android:layout_width="135dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="63dp"
        android:text="Equations"
        android:layout_above="@+id/learn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Convert Units"
        android:layout_above="@+id/learn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/learn"
        android:layout_width="135dp"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp"
        android:text="Learn" />


    <Button
        android:id="@+id/settings"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_below="@+id/learn"
        android:layout_alignStart="@+id/help" />
    <Button
        android:id="@+id/help"
        android:layout_width="135dp"
        android:layout_height="wrap_content"

        android:text="Help"
        android:layout_below="@+id/settings"
        android:layout_alignStart="@+id/learn"
        android:layout_marginTop="21dp" />

</RelativeLayout>
